@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: #f2f2f2;
    }
    .login-container {
        max-width: 350px;
        margin: 60px auto;
        padding: 30px 25px 25px 25px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.08);
    }
    .login-title {
        text-align: center;
        margin-bottom: 25px;
        font-size: 2rem;
        color: #333;
        font-weight: 600;
    }
    .login-form label {
        display: block;
        margin-bottom: 6px;
        color: #555;
        font-size: 1rem;
    }
    .login-form input[type="email"],
    .login-form input[type="password"] {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 18px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        background: #fafafa;
        transition: border-color 0.2s;
    }
    .login-form input:focus {
        border-color: #007bff;
        outline: none;
    }
    .login-form button {
        width: 100%;
        padding: 10px 0;
        background: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 1.1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s;
    }
    .login-form button:hover {
        background: #0056b3;
    }
    .login-error {
        color: #d8000c;
        background: #ffd2d2;
        border: 1px solid #d8000c;
        border-radius: 4px;
        padding: 8px 12px;
        margin-bottom: 15px;
        text-align: center;
        font-size: 0.98rem;
    }
</style>

<div class="login-container">
    <div class="login-title">Login</div>
    <form class="login-form" asp-action="Index" method="post">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="login-error">@ViewBag.ErrorMessage</div>
        }
        <label for="email">Email address</label>
        <input type="email" id="email" name="Email" placeholder="Enter email" required />

        <label for="password">Password</label>
        <input type="password" id="password" name="Password" placeholder="Password" required />

        <button type="submit">Log In</button>
    </form>
</div>
